

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900"><%= @assignment.name %></h1>
      <p class="mt-2 text-sm text-gray-700">Students participating in assignment</p>
    </div>
  </div>
  <div class="mt-8 flow-root mb-20">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <%= turbo_stream_from 'student_assignments' %>
          <%= render partial: 'show_assignment', locals: { assignment: @assignment } %>
        </div>
      </div>
    </div>
  </div>

  <%= link_to 'All Assignments', assignments_index_path, class: "#{button_style} mt-10" %>
</div>
