<%= turbo_frame_tag dom_id(choice) do %>
    <div>
        <p>Correct: <%= choice.correct %></p>
        <p><%= choice.value %></p>
        Actions:
        <%= link_to "Delete Choice", choice_delete_path(choice), data: { turbo_method: :delete } %>
        <%= link_to "Edit Choice", choice_edit_path(choice), data: { turbo_stream: true } %>
    </div>
<% end %>
