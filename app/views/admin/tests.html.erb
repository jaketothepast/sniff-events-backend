<div>
    <%= link_to "New Test", tests_new_path, class: "text-indigo-600 hover:text-indigo-900" %>
    <table class="table-auto pt-5">
        <thead>
            <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Active?</th>
            <th>Registered Users</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @tests.each do |test| %>
                <tr>
                    <td><%= link_to test.name, tests_show_path(test), class: "text-indigo-600 hover:text-indigo-900" %></td>
                    <td><%= test.description %></td>
                    <td><%= test.active %></td>
                    <td><%= test.test_takers.count %></td>
                    <td>
                        <%= link_to "Deploy", admin_test_deploy_path(test) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
